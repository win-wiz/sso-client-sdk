{
  "name": "@tjsglion/sso-client-sdk",
  "version": "3.0.1",
  "description": "企业级SSO客户端SDK，支持多种认证方式、框架集成和高级功能",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/useSSO.js",
      "require": "./dist/react/useSSO.js",
      "types": "./dist/react/useSSO.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "sso",
    "oauth",
    "authentication",
    "login",
    "2fa",
    "typescript",
    "react",
    "vue",
    "javascript",
    "client-sdk",
    "enterprise",
    "single-sign-on"
  ],
  "author": {
    "name": "tjsglion",
    "email": "your-email@example.com",
    "url": "https://github.com/tjsglion"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/win-wiz/sso-client-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/win-wiz/sso-client-sdk/issues"
  },
  "homepage": "https://github.com/win-wiz/sso-client-sdk#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm run test",
    "test": "node test-enterprise.js",
    "test:simple": "node test-simple.js",
    "test:optimized": "node test-optimized.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docs": "npm run build && node scripts/generate-docs.js",
    "release": "npm run build && npm publish",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "publishConfig": {
    "access": "public"
  }
} 